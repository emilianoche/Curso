<p id="notice"><%= notice %></p>

<h1>Listing Empleados</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Legajo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @empleados.each do |empleado| %>
      <tr>
        <td><%= empleado.nombre %></td>
        <td><%= empleado.apellido %></td>
        <td><%= empleado.legajo %></td>
        <td><%= link_to 'Show', empleado %></td>
        <td><%= link_to 'Edit', edit_empleado_path(empleado) %></td>
        <td><%= link_to 'Destroy', empleado, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Empleado', new_empleado_path %>
<hr />
<%= form_tag do %>
   <%= label_tag "legajo", "Buscar por legajo" %>
   <%= text_field_tag "legajo", "" %>
   <%= submit_tag "Buscar", {:type => "button", :id => "boton_buscar"} %>
   <div id="respuesta"></div>
<% end %>
