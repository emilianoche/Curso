<p id="notice"><%= notice %></p>
<header>
  <tr>
    <th><%= link_to "Inicio", welcome_index_path %></th>
    <th><%= link_to "Projects",projects_path%></th>
  </tr>
</header>
<h1>Listing Workers</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to "First name" , workers_path(order: 'first_name') %></th>
      <th>Proyectos </th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.first_name %></td>
        <td><%= worker.projects.count %></td>
        <td><%= image_tag worker.image.url(:thumb) %></td>
        <td><%= link_to 'Show', worker %></td>
        <td><%= link_to 'Edit', edit_worker_path(worker) %></td>
        <td><%= link_to 'Destroy', worker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

